@model IEnumerable<SmartSchoolSystem.Models.Event>

@{
    ViewBag.Title = "Events Home Page";
}

<h2 class="text-center">Events Home Page</h2>

@if (HelperClass.account == "Admin")
{
    <div style="padding-top:20px; padding-bottom:20px; align-self:center;padding-left:600px;">
        <a class="btn btn-primary" style="background-color:black; border-color:black; align-self:center" href=@Url.Action("Create", "Events")>Create New Event</a>
    </div>
}
@if (Model != null)
{
foreach (var item in Model)
    {
        <div class="text-center" style="border: 5px solid #000000; border-radius: 5px; padding: 10px; width: 80%; height: auto; margin: auto;">
            <span class="icons c3"><i class="fa fa-trophy"></i></span> 
            <div class="box-area">
                <h3>@item.name</h3> 
            <p>@item.description</p>
            <p>Contact: @item.contact</p>
            <p>Date&Time: @item.date.ToString();</p>
            <br />
                @if (HelperClass.account == "Admin")
                {
                    <div>
                        <a class="btn btn-primary" style="background-color:black; border-color:black; align-self:center" href=@Url.Action("Edit", "Events", new { id = 1 })>Update</a>

                        <a class="btn btn-primary" style="background-color:black; border-color:black; align-self:center" href=@Url.Action("Delete", "Events", new { id = 1 })>Delete</a>
                    </div>
                }
            </div>
        </div>
        <br />
}
}


