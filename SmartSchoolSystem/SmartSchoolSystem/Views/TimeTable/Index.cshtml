@model IEnumerable<SmartSchoolSystem.Models.TimeTableViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="padding-bottom:30px; padding-left:600px;">Time Table</h2>
<div style="padding-left:600px;">
    <label>Class: </label> &nbsp;
    <select>
        <option>1A</option>
        <option>1B</option>
        <option>2A</option>
        <option>2A</option>
    </select>
    </div>
<div class="text-center" style="border: 5px solid #000000; border-radius: 5px; padding: 10px; width: 80%; height: auto; margin: auto;">
    <table class="table">
        <tr>
            <th>
                Day
            </th>
            <th>
                8:00 - 9:00
            </th>
            <th>
                9:00 - 10:00
            </th>
            <th>
                10:00 - 11:00
            </th>
            <th>
                11:00 - 12:00
            </th>
            <th>
                12:00 - 1:00
            </th>
            <th>
                1:00 - 2:00
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.day)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.subject)*@
                    English
                </td>
                <td>
                    Urdu
                </td>
                <td>
                    Math
                </td>
                <td>
                    Phy
                </td>
                <td>
                    Chem
                </td>
                <td>
                    Bio
                </td>
            </tr>
        }
    </table>

</div>